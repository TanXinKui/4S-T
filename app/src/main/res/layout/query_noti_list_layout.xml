<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:layout_marginBottom="4dp"
    android:layout_marginTop="4dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_query_noti_list_date"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="15dp"
            android:gravity="center|left"
            android:text=""
            android:textColor="#000"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/tv_query_noti_list_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:gravity="center|left"
            android:layout_below="@id/tv_query_noti_list_date"
            android:text=""
            android:textColor="#000"
            android:textSize="18dp" />
        <TextView
            android:id="@+id/tv_query_noti_list_endDate"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="15dp"
            android:gravity="center|left"
            android:layout_below="@id/tv_query_noti_list_content"
            android:text=""
            android:textColor="#000"
            android:textSize="18dp" />
    </RelativeLayout>

</android.support.v7.widget.CardView>