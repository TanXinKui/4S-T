<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:layout_marginBottom="4dp"
    android:layout_marginTop="4dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_query_select_course_id"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:gravity="center|left"
             />

        <TextView
            android:id="@+id/tv_query_select_course_name"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_below="@id/tv_query_select_course_id"
            android:gravity="center|left"
             />

        <TextView
            android:id="@+id/tv_query_select_course_teachername"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_below="@id/tv_query_select_course_name"
            android:gravity="center|left"
            />

        <ImageView
            android:id="@+id/iv_query_select_course_manage"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:visibility="visible"
            android:layout_toRightOf="@id/tv_query_select_course_id"
            android:src="@drawable/tap" />
    </RelativeLayout>

</android.support.v7.widget.CardView>